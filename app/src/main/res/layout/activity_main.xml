<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.edu.cetis108.cetis1084am_app002.MainActivity">

    <TextView
        android:text="Número 1:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="42dp"
        android:id="@+id/lblNum1"
        android:textStyle="normal|bold"
        android:textColor="@color/colornegro" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lblNum1"
        android:layout_toEndOf="@+id/lblNum1"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="29dp"
        android:id="@+id/txtNumero1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtNumero2"
        android:layout_alignBaseline="@+id/lblNum2"
        android:layout_alignBottom="@+id/lblNum2"
        android:layout_alignLeft="@+id/txtNumero1"
        android:layout_alignStart="@+id/txtNumero1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNumero2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:id="@+id/lblResultado"
        android:textColor="@color/colorrojo" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblResultado"
        android:layout_alignLeft="@+id/lblNum2"
        android:layout_alignStart="@+id/lblNum2"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="41dp"
        android:id="@+id/btnSumar"
        android:onClick="btnSumar_click"
        android:textStyle="normal|bold"
        android:textAllCaps="false" />

    <Button
        android:text="x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMultiplicar"
        android:onClick="btnMultiplicar_click"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/btnDividir"
        android:layout_alignBottom="@+id/btnDividir"
        android:layout_alignLeft="@+id/btnRestar"
        android:layout_alignStart="@+id/btnRestar" />

    <TextView
        android:text="Número 2:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:id="@+id/lblNum2"
        android:textColor="@color/colornegro"
        android:layout_below="@+id/txtNumero1"
        android:layout_alignLeft="@+id/lblNum1"
        android:layout_alignStart="@+id/lblNum1"
        android:textStyle="normal|bold" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRestar"
        android:onClick="btnRestar_click"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:textColor="@color/colornegro"
        android:layout_below="@+id/btnSumar"
        android:layout_alignLeft="@+id/btnSumar"
        android:layout_alignStart="@+id/btnSumar"
        android:layout_marginTop="31dp" />

    <Button
        android:text="x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnSumar"
        android:layout_alignRight="@+id/txtNumero2"
        android:layout_alignEnd="@+id/txtNumero2"
        android:id="@+id/btnMultiplicar"
        android:onClick="btnMultiplicar_click"
        />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnRestar"
        android:layout_alignRight="@+id/btnMultiplicar"
        android:layout_alignEnd="@+id/btnMultiplicar"
        android:id="@+id/btnDividir"
        android:onClick="btnDividir_click"
        />

</RelativeLayout>
